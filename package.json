{
  "name": "whatthepunk",
  "version": "1.0.0-dev",
  "description": "A search UI for the Punk API",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write ./src/**/*.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "webpack-dev-server --mode development",
    "build": "webpack --progress",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "updeps": "npx npm-check-updates",
    "updeps:ok": "npx npm-check-updates -u && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Piefou/whatthepunk.git"
  },
  "keywords": [
    "punkapi",
    "beer",
    "search"
  ],
  "author": "Pierre Fourr√©",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Piefou/whatthepunk/issues"
  },
  "homepage": "https://github.com/Piefou/whatthepunk#readme",
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.5",
    "clean-webpack-plugin": "^2.0.1",
    "copy-webpack-plugin": "^5.0.2",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "mini-css-extract-plugin": "^0.5.0",
    "prettier": "^1.16.4",
    "style-loader": "^0.23.1",
    "webpack": "^4.29.6",
    "webpack-bundle-analyzer": "^3.1.0",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1"
  },
  "dependencies": {
    "core-js": "^3.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "regenerator-runtime": "^0.13.2",
    "whatwg-fetch": "^3.0.0",
    "react-truncate-markup": "^3.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run format",
      "git add"
    ]
  }
}
